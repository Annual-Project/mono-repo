                </div>
                
                <!-- Feature 6 -->
                <div class="card hover-lift">
                    <div class="card-header">
                        <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                            <i data-lucide="star" class="w-6 h-6 text-primary"></i>
                        </div>
