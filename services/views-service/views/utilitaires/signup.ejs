    <script>
        // Configuration de l'API
        const API_BASE_URL = '/api/v1'; // Remplacez par votre URL d'API
        
        // Service d'authentification
        class AuthService {
            constructor() {
                this.baseUrl = API_BASE_URL;
            }
            
            async signup(email) {
                try {
                    const response = await fetch(`${this.baseUrl}/auth/signup`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ email })
                    });
                    
                    if (!response.ok) {
                        console.log(0); // Erreur de la première requête
                        const errorData = await response.json();
                        throw new Error(errorData.message || 'Erreur lors de l\'inscription');
                    }
                    
                    return await response.json();
                } catch (error) {
                    if (!error.message.includes('fetch')) {
                        console.log(0); // Erreur réseau ou autre
                    }
                    throw error;
                }
            }
            
            async signupValidate(data) {
                try {
                    const response = await fetch(`${this.baseUrl}/auth/signupValidate`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data)
                    });
                    
                    if (!response.ok) {
                        console.log(2); // Erreur de la deuxième requête
                        const errorData = await response.json();
                        throw new Error(errorData.message || 'Erreur lors de la validation');
                    }
                    
                    return await response.json();
                } catch (error) {
                    if (!error.message.includes('fetch')) {
                        console.log(2); // Erreur réseau ou autre pour la validation
                    }
                    throw error;
                }
            }
            
            setUser(userData) {
                // Stocker les données utilisateur dans le localStorage
                localStorage.setItem('user', JSON.stringify(userData));
                
                // Rediriger vers le dashboard
                window.location.href = 'dashboard.html';
            }
            
            getCurrentUser() {
                const userData = localStorage.getItem('user');
                return userData ? JSON.parse(userData) : null;
            }
            
            logout() {
                localStorage.removeItem('user');
                window.location.href = 'signup.html';
            }
        }
        
        // Instance du service d'authentification
        const authService = new AuthService();
        
        // Fonction de proof of work
        function calculateProofOfWork(challenge, difficulty) {
            let proof = 0;
            const prefix = "0".repeat(parseInt(difficulty));
            
            while (true) {
                const hash = CryptoJS.SHA256(challenge + proof).toString(CryptoJS.enc.Hex);
                if (hash.startsWith(prefix)) {
                    return proof;
                }
                proof++;
            }
        }
        
        function togglePasswordVisibility(fieldId, toggleElement) {
            const passwordField = document.getElementById(fieldId);
            const eyeIcon = toggleElement.querySelector('i');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }
        
        // Initialisation des toggle de mot de passe
        document.getElementById('passwordToggle').addEventListener('click', function() {
            togglePasswordVisibility('password', this);
        });
        
        document.getElementById('confirmPasswordToggle').addEventListener('click', function() {
            togglePasswordVisibility('confirmPassword', this);
        });
        
        function showError(message) {
            const errorElement = document.getElementById('signupError');
            errorElement.textContent = message;
            errorElement.style.display = 'block';
            
            // Hide error after 5 seconds
            setTimeout(() => {
                errorElement.style.display = 'none';
            }, 5000);
        }
        
        function checkPasswordStrength() {
            const password = document.getElementById('password').value;
            const strengthBar = document.getElementById('passwordStrength');
            const reqLength = document.getElementById('reqLength');
            const reqNumber = document.getElementById('reqNumber');
            const reqUpper = document.getElementById('reqUpper');
            const reqSpecial = document.getElementById('reqSpecial');
            
            let strength = 0;
            
            // Check length
            if (password.length >= 8) {
                strength += 25;
                reqLength.classList.add('met');
            } else {
                reqLength.classList.remove('met');
            }
            
            // Check for numbers
            if (/\d/.test(password)) {
                strength += 25;
                reqNumber.classList.add('met');
            } else {
                reqNumber.classList.remove('met');
            }
            
            // Check for uppercase letters
            if (/[A-Z]/.test(password)) {
                strength += 25;
                reqUpper.classList.add('met');
            } else {
                reqUpper.classList.remove('met');
            }
            
            // Check for special characters
            if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
                strength += 25;
                reqSpecial.classList.add('met');
            } else {
                reqSpecial.classList.remove('met');
            }
            
            // Update strength bar
            strengthBar.style.width = strength + '%';
            
            // Update color based on strength
            if (strength < 50) {
                strengthBar.style.background = '#ef4444';
            } else if (strength < 75) {
                strengthBar.style.background = '#f59e0b';
            } else {
                strengthBar.style.background = '#10b981';
            }
        }
        
        function setLoadingState(isLoading) {
            const signupBtn = document.querySelector('.signup-btn');
            const signupText = document.getElementById('signupText');
            const signupIcon = document.getElementById('signupIcon');
            
            if (isLoading) {
                signupBtn.disabled = true;
                signupText.textContent = 'Création du compte...';
                signupIcon.className = 'fas fa-spinner spinner';
            } else {
                signupBtn.disabled = false;
                signupText.textContent = 'Créer mon compte';
                signupIcon.className = 'fas fa-user-plus';
            }
        }
        
        // Gestion de la soumission du formulaire
        const signupForm = document.getElementById('signupForm');
        signupForm.addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const email = document.getElementById('email').value;
            const confirmPassword = document.getElementById('password').value;
            const againPassword = document.getElementById('confirmPassword').value;
            const firstname = document.getElementById('firstName').value;
            const lastname = document.getElementById('lastName').value;
            const terms = document.getElementById('terms').checked;
            
            // Validation simple
            if (!firstname || !lastname || !email || !confirmPassword || !againPassword) {
                // showError('Veuillez remplir tous les champs obligatoires');
                showToast('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }
            
            if (!terms) {
                // showError('Veuillez accepter les conditions d\'utilisation');
                showToast('Veuillez accepter les conditions d\'utilisation', 'error');
                return;
            }
            
            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                // showError('Veuillez entrer une adresse email valide');
                showToast('Veuillez entrer une adresse email valide', 'error');
                return;
            }
            
            // Password match validation
            if (confirmPassword !== againPassword) {
                // showError('Les mots de passe ne correspondent pas');
                showToast('Les mots de passe ne correspondent pas', 'error');
                return;
            }
            
            // Password strength validation
            if (document.getElementById('passwordStrength').style.width !== '100%') {
                // showError('Veuillez renforcer votre mot de passe');
                showToast('Veuillez renforcer votre mot de passe', 'error');
                return;
            }
            
            setLoadingState(true);
            
            try {
                // Première requête : obtenir le salt et le défi proof of work
                const signupResponse = await authService.signup(email);
                console.log(1); // Succès de la première requête
                const { salt, pow } = signupResponse;
                
                // Calculer le proof of work
                const proof = calculateProofOfWork(pow.challenge, pow.difficulty);
                
                // Hacher le mot de passe avec le salt
                const hashPassword = CryptoJS.SHA256(confirmPassword + salt).toString(CryptoJS.enc.Hex);
                
                // Deuxième requête : validation avec le mot de passe haché et le proof
                const validateResponse = await authService.signupValidate({
                    email,
                    firstname,
                    lastname,
                    hashPassword,
                    challenge: pow.challenge,
                    signature: pow.signature,
                    proof,
                });
                
                console.log('Inscription réussie!');
                window.location.href = '/';
                
            } catch (error) {
                console.error('Erreur d\'inscription:', error);
                // showError(error.message || 'Une erreur est survenue lors de l\'inscription');
                showToast(error.message || 'Une erreur est survenue lors de l\'inscription', 'error');
                setLoadingState(false);
            } finally {
                setLoadingState(false);
            }
        });
        
        // Vérifier si l'utilisateur est déjà connecté au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            const currentUser = authService.getCurrentUser();
            if (currentUser) {
                // L'utilisateur est déjà connecté, rediriger vers le dashboard
                window.location.href = '/';
            }
        });
        
        // Add animation to form elements
        document.querySelectorAll('.form-group, .terms, .signup-btn').forEach((el, index) => {
            el.style.animationDelay = `${index * 0.1}s`;
            el.classList.add('form-animation');
        });
        
        // Gestion des boutons de connexion sociale (optionnel)
        document.querySelectorAll('.social-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Ici vous pouvez ajouter la logique pour la connexion sociale
                console.log('Connexion sociale non implémentée');
                // showError('Connexion sociale non disponible pour le moment');
                showToast('Connexion sociale non disponible pour le moment', 'info');
            });
        });
    </script>
